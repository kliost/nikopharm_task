@model List<EmployeeModel>
<body>
    <div class="container">
        <h2>Пошук співробітника</h2>
        <form method="get" action="/Home/Search">
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <input type="text" name="lastName" class="form-control" placeholder="Прізвище">
                </div>
                <div class="col-md-3 mb-3">
                    <input type="text" name="department" class="form-control" placeholder="Відділ">
                </div>
                <div class="col-md-3 mb-3">
                    <input type="text" name="position" class="form-control" placeholder="Посада">
                </div>
                <div class="col-md-3 mb-3">
                    <button type="submit" class="btn btn-primary">Пошук</button>
                </div>
            </div>
        </form>
        </div>


    <table class="table table-bordered table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Patronimyc</th>
                <th scope="col">Birthday</th>
                <th scope="col">Department</th>
                <th scope="col">Position</th>
                <th scope="col">Salary</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var employee in Model)
                {
                    <tr>
                        <th scope="row">@employee.Id</th>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Patronimyc</td>
                        <td>@employee.Birthday.ToString("dd-MM-yyyy")</td>
                        <td>@employee.Department</td>
                        <td>@employee.Position</td>
                        <td>@employee.Salary $</td>
                        <td>
                            <a href="/Home/Update/@employee.Id" class="btn btn-primary">Edit</a>
                            <a href="/Home/Delete/@employee.Id" class="btn btn-outline-danger">
                                
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"></path>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"></path>
                                </svg>
                                
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a href="/Home/NewEmployee" class="btn btn-primary">Hire</a>
</body>