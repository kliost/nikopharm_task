@model EmployeeModel

<h1>Create Employee</h1>

<form method="post">
    <div class="form-group">
        <label for="FirstName">FirstName:</label>
        <input asp-for="FirstName" id="FirstName" class="form-control" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label for="Lastasp-for">LastName:</label>
        <input asp-for="LastName" id="LastName" class="form-control" />
        <span asp-validation-for="LastName"></span>

    </div>
    <div class="form-group">
        <label for="Patronimyc">Patronimyc:</label>
        <input asp-for="Patronimyc" id="Patronimyc" class="form-control" />
        <span asp-validation-for="Patronimyc"></span>

    </div>
    <div class="form-group">
        <label for="Birthday">Birthday:</label>
        <input asp-for="Birthday" id="Birthday" class="form-control" type="date" />
        <span asp-validation-for="Birthday"></span>

    </div>
    
    <div class="form-group">
        <label for="Department">Department:</label>
        <input asp-for="Department" id="Department" class="form-control" />
        <span asp-validation-for="Department"></span>

    </div>
    <div class="form-group">
        <label for="Position">Position:</label>
        <input asp-for="Position" id="Position" class="form-control" />
        <span asp-validation-for="Position"></span>

    </div>
    <div class="form-group">
        <label for="Salary">Salary:</label>
        <input asp-for="Salary" id="Salary" class="form-control" type="number" step="0.1" />
        <span asp-validation-for="Salary"></span>

    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
